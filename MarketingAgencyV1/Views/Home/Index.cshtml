}

<section class="hero fadein">
    <div>
        <div class="swiper-container gallery-top swiper-container-horizontal">
            <!-- horizontal slides -->
            <div class="swiper-wrapper">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="swiper-slide bg-image swiper-slide-duplicate" data-swiper-slide-index="0" data-stellar-background-ratio="0.5" style="background-image: url(img/home/startegie.webp);"></div>
                    <div class="swiper-slide bg-image swiper-slide-duplicate" data-swiper-slide-index="1" data-stellar-background-ratio="0.5" style="background-image: url(img/home/digital.webp);"></div>
                    <div class="swiper-slide bg-image swiper-slide-duplicate" data-swiper-slide-index="2" data-stellar-background-ratio="0.5" style="background-image: url(img/home/content.webp);"></div>

                }
            </div>
        </div>
        <div class="swiper-container gallery-thumbs swiper-container-vertical">
            <!-- vertical slides -->
            <div class="swiper-wrapper ">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="swiper-slide swiper-slide-duplicate" data-swiper-slide-index="0">
                        Marketing Strategy
                        <a href="#">
                            Explore
                            <div class="plus">+</div>
                        </a>
                    </div>
                    <div class="swiper-slide swiper-slide-duplicate" data-swiper-slide-index="1">
                        Digital Marketing
                        <a href="https://www.boldot.com/services/#digital">
                            Explore
                            <div class="plus">+</div>
                        </a>
                    </div>
                    <div class="swiper-slide swiper-slide-duplicate" data-swiper-slide-index="2">
                        Creative Content
                        <a href="https://www.boldot.com/services/#content">
                            Explore
                            <div class="plus">+</div>
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="hero-scroll fadein">
            <b>SCROLL DOWN</b>
            <span></span>
        </div>
    </div>
</section>

