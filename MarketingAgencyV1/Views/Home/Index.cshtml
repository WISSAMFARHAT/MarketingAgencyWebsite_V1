@{
    Html.Bundle("https://code.jquery.com/jquery-3.6.0.min.js");
    Html.Bundle("https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css");
    Html.Bundle("https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js");
    Html.Bundle("https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js");
    Html.Bundle("js/swipe.js");
